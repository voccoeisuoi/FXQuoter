<Window x:Class="FXQuoter.FXQ"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        Title="FXQuoter" Height="20" Width="100" WindowStyle="None" Topmost="True" ShowInTaskbar="False"
        Closing="Window_Closing"
        Top="722" Left="1309" Focusable="True" ResizeMode="NoResize" SizeToContent="WidthAndHeight">
    <StackPanel Orientation="Horizontal">
        <TextBlock Text="{Binding ERROR}" Background="Red"/>
        <TextBlock Text="{Binding Bid}"/>
        <TextBlock>/</TextBlock>
        <TextBlock Text="{Binding Ask}"/>
    </StackPanel>
</Window>
